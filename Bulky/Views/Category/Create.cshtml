@model Category
<form method=" Post">
	<div class="border p-3 mt-4>
		<div class="row pb-2">
			<h2 class="text-primary">
			@Model.Name
			</h2>
			<input class="form-control" type="text">
			</input>
		</div>
		<div class="mb-3-row">
			<label >
			@Model.DisplayOrder
			</label>
			<input class="form-control" type="text">
			</input>
		</div>
		<div class="row">
			<div class="col-6 col-md-3">
				<button type="submit" class="btn btn-primary" form-control></button>
			</div>
			<div class="col-6 col-md-3">
				<a asp-controller="Category" asp-action="Index" class="btn btn-secondary border form-control">
					BackToList
				</a>
			</div>
		</div>
	</div>
</form>