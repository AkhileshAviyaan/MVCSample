@model Product
<form method="Post">
	<div class="border p-3 mt-4>
		<label class="text-primary">
			Delete Product
		</label>
		<hr />
		<div class="mb-3">
			<label asp-for="Title" class="p-0">
			</label>
			<input asp-for="Title" class="form-control" disabled>
			</input>
		</div>
		<div class="mb-3">
			<label asp-for="Description" class="p-0">
			</label>
			<input asp-for="Description" class="form-control" disabled>
			</input>
		</div>
		<div class="mb-3">
			<label asp-for="ISBN" class="p-0">
			</label>
			<input asp-for="ISBN" class="form-control" disabled>
			</input>
		</div>
		<div class="mb-3">
			<label asp-for="Author" class="p-0">
			</label>
			<input asp-for="Author" class="form-control" disabled>
			</input>
		</div>
		<div class="mb-3">
			<label asp-for="ListPrice" class="p-0">
			</label>
			<input asp-for="ListPrice" class="form-control" disabled>
			</input>
		</div>
		<div class="mb-3">
			<label asp-for="Price" class="p-0">
			</label>
			<input asp-for="Price" class="form-control" disabled>
			</input>
		</div>
		<div class="mb-3">
			<label asp-for="Price50" class="p-0">
			</label>
			<input asp-for="Price50" class="form-control" disabled>
			</input>
		</div>
		<div class="mb-3">
			<label asp-for="Price100" class="p-0">
			</label>
			<input asp-for="Price100" class="form-control" disabled>
			</input>
		</div>
	<div class="row">
		<div class="col-6 col-md-3">
			<button type="submit" class="btn btn-danger">Delete</button>
		</div>
		<div class="col-6 col-md-3 end-0">
			<a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary">
				BackToList
			</a>
		</div>
	</div>
	</div>

</form>
